{% extends "base.html.j2" %}
{% block title %}{{ username }}{% endblock %}
{% block head %}
    {{ super() }}
{% endblock %}
{% block content %}
    <h1>{{ username }}'s page</h1>
    {% if username %}
        <div>{{ username }}'s page</div>
        <div>follow <a href="/follow/{{ userid }}">{{ username }}</a/></div>
        <div>unfollow <a href="/unfollow/{{ userid }}">{{ username }}</a/></div>
        <br>
        {% for thread in threads %}
            <div>{{ thread.username }}, <time datetime="{{ thread.created_at }}"></time></div> </div>{{ thread.message }} </div>
        {% endfor %}
    {% else %}
        <div>you're not logged in :|</div>
        <div>go to <a href="/login">login page</a> or <a href="/register">register</a></div>
    {% endif %}
{% endblock %}