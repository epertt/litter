{% extends "base.html.j2" %}
{% block title %}{{ username }}{% endblock %}
{% block head %}
{{ super() }}
{% endblock %}
{% block content %}
<div id="content-userpage">
    <!--<h1>{{ username }}'s page</h1>-->
    {% if username %}
    {% if viewer_id == viewed_id %}
    {% elif is_followed == false %}
    <div><a href="/follow/{{ viewed_id }}">follow {{ username }}</a /></div>
    {% else %}
    <div><a href="/unfollow/{{ viewed_id }}">unfollow {{ username }}</a /></div>
    {% endif %}
    <div id="userthreads" class="content-block">
        <div class="thread-container">
            {% for thread in threads %}
            {% include 'threads-partial.html.j2' %}
            {% endfor %}
        </div>
    </div>
    {% endif %}
</div>

{% endblock %}